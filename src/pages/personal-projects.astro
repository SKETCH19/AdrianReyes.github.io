---
import Header from '../components/Header.astro';
import Project from '../components/Project.astro';
import Sidebar from '../components/Sidebar.astro';
const projects = [
  {
    title: "Supply Chain Management System",
    desc: [
      "Complete Supply Chain Management (SCM) system for a hardware store featuring full inventory management capabilities",
      "Demonstrates proficiency in both web development and quality assurance through comprehensive automated testing suite",
      "Implements Page Object Model design pattern for maintainable test automation with Selenium and Pytest"
    ],
    tech: ["PHP", "MySQL", "HTML5", "CSS3", "JavaScript", "Python", "Selenium", "Pytest", "Page Object Model"],
    domainLink: "https://sketch19.github.io/Pruebas-Automatizadas-con-Selenium/",
    codeLink: "https://github.com/SKETCH19/Pruebas-Automatizadas-con-Selenium/tree/main/SCM%20Ferreteria"
  },
  {
    title: "Hotel Management Web App",
    desc: [
      "A hotel management web app that presents hotel information and services, supports reservations and user profiles, and includes an admin area",
      "Focuses on the core front-end experience (rooms, services, contact, and booking pages)",
      "Includes backend-ready PHP structure with tests for pricing, discounts, and validation logic"
    ],
    tech: ["PHP", "HTML/CSS/JavaScript", "PHPUnit", "Jest + JSDOM", "Composer", "Azure Pipelines"],
    domainLink: "https://sketch19.github.io/HotelGesti-n/",
    codeLink: "https://github.com/SKETCH19/HotelGesti-n/tree/main/HotelGesti%C3%B3n"
  },
  {
    title: "Biblioteca - Library Management",
    desc: [
      "Library management website that lets users browse books and authors, add new entries, edit existing records, and manage content through simple CRUD forms",
      "Includes a homepage showcasing featured categories, an authors directory, a books catalog, and a contact page for visitor feedback",
      "Uses a lightweight local database (SQLite) so the content is dynamic and easy to update"
    ],
    tech: ["PHP", "SQLite", "HTML5", "CSS3", "Bootstrap", "JavaScript"],
    domainLink: "https://sketch19.github.io/SONDER-PROJECT/",
    codeLink: "https://github.com/SKETCH19/Biblioteca/tree/main/Biblioteca"
  },
  {
    title: "Sonder - Messaging Platform",
    desc: [
      "Web-based messaging platform focused on meaningful connections with account creation, friend management, and direct messaging",
      "Emphasizes security with Argon2id password hashing, CSRF protection, XSS protection, and input validation",
      "Features include profile/avatar management, friend requests, audit logs for key actions, and multi-language UI support"
    ],
    tech: ["PHP (PDO)", "SQLite/MySQL", "HTML5", "CSS3", "JavaScript", "Argon2id", "CSRF Protection"],
    domainLink: "https://sketch19.github.io/SONDER-PROJECT/",
    codeLink: "https://github.com/SKETCH19/SONDER-PROJECT"
  }
];
---

<!DOCTYPE html>
<html
>
  <Header title="Personal Projects | Adrian Reyes" />
  <body>
    <div class="content">
        <Sidebar selectedItem="personal-projects" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/AdrianReyes.github.io/" class="back-nav-button w-inline-block">
              <img src="/AdrianReyes.github.io/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
              <div>Back</div></a
            >
          </div>
          <div class="content-container">
            <h1>Personal Projects</h1>
            <section class="items-container">
                <div class="resouce-items">
                    {projects.map(project => (
                      <Project 
                        title={project.title} 
                        desc={project.desc}
                        tech={project.tech}
                        domainLink={project.domainLink}
                        codeLink={project.codeLink}
                      />
                    ))}
                  </div>
            </section>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
